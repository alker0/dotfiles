if locale -a | grep -qe ja_JP.utf8 ; then
  export LANG=ja_JP.utf8
else
  export LANG=C
fi

{{ template "env/env" "bash" }}

export GPG_TTY="$(tty)"

bash_profile_load_with_filecheck() {
  if [ -f "$1" ]; then
    . "$1"
  fi
}

case $- in
  *i*) ;;
  *)
    load_with_filecheck "$HOME/.bash_aliases"
    return ;;
esac

bash_profile_load_with_filecheck  "$HOME/.bashrc"
